{
  "name": "styled-component-helper",
  "displayName": "styled-component-helper",
  "description": "Styled Components Extract Intention.",
  "publisher": "JayasuryaManne",
  "version": "0.0.6",
  "repository": {
    "type": "git",
    "url": "https://github.com/ManneJayaSurya/styled-component-helper"
  },
  "icon": "./assets/styled-component-logo.jpg",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "styled-component-helper",
        "title": "Extract to Styled Component",
        "enablement": "editorLangId === typescriptreact || editorLangId === javascriptreact"
      } 
    ],
    "keybindings": [
      {
        "command": "styled-component-helper",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "styled-component-helper",
          "group": "navigation",
          "when": "editorLangId === typescriptreact || editorLangId === javascriptreact"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "prettier": "3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  }
}
